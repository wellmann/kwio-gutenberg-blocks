{
  "name": "kwio-gutenberg-blocks",
  "version": "0.1.0",
  "description": "Foundation to develop custom blocks for Gutenberg.",
  "author": {
    "name": "Kevin Wellmann",
    "url": "http://kevin.wellmann.io"
  },
  "private": true,
  "config": {
    "themeAssets": "/assets",
    "themeScssIncludes": "/assets/scss/_includes"
  },
  "bin": {
    "create-block": "./tasks/cli.js"
  },
  "scripts": {
    "start": "nps watch",
    "build:editor": "nps build.editor.block && nps build.editor.style",
    "prebuild:editor": "nps clean.editor.block && nps clean.editor.style",
    "build:frontend": "nps build.frontend.style && nps build.frontend.script",
    "prebuild:frontend": "nps clean.frontend.style && nps clean.frontend.script"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.scss": [
      "suppress-exit-code stylelint --fix",
      "git add"
    ],
    "*.js": [
      "suppress-exit-code eslint --fix",
      "git add"
    ],
    "*.php": [
      "suppress-exit-code ./vendor/bin/phpcs",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-decorators": "^7.2.3",
    "@babel/plugin-transform-react-jsx": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@wordpress/babel-plugin-makepot": "^2.1.2",
    "autoprefixer": "^9.4.2",
    "babel-eslint": "^10.0.1",
    "babel-plugin-inline-replace-variables": "^1.3.1",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "bulk-require": "^1.0.1",
    "bulkify": "^1.4.2",
    "chalk": "^2.4.1",
    "cli-error-notifier": "^2.0.1",
    "concat": "^1.0.3",
    "concurrently": "^4.0.1",
    "css-mqpacker": "^7.0.0",
    "eslint": "^5.9.0",
    "eslint-config-wordpress": "^2.0.0",
    "eslint-plugin-react": "^7.11.1",
    "exorcist": "^1.0.1",
    "hashmark": "^5.0.0",
    "husky": "^1.2.0",
    "node-sass": "^4.13.1",
    "notify-error": "^1.2.0",
    "nps": "^5.9.12",
    "onchange": "^5.1.3",
    "postcss": "^7.0.6",
    "postcss-cachebuster": "^0.1.5",
    "postcss-cli": "^6.0.1",
    "postcss-csso": "^3.0.0",
    "rimraf": "^2.6.2",
    "sort-css-media-queries": "^1.4.1",
    "stylelint": "^9.9.0",
    "suppress-exit-code": "^0.1.0",
    "tee-pipefail": "^1.0.1",
    "uglify-js": "^3.4.9"
  },
  "dependencies": {
    "slugify": "^1.3.6",
    "word-count": "^0.2.2"
  }
}
