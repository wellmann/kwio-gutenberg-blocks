{
  "name": "kwio-gutenberg-blocks",
  "version": "0.1.0",
  "description": "Foundation to develop custom blocks for Gutenberg.",
  "author": {
    "name": "Kevin Wellmann",
    "url": "http://kevin.wellmann.io"
  },
  "private": true,
  "config": {
    "themeAssets": "/assets",
    "themeScssIncludes": "/assets/scss/_includes"
  },
  "bin": {
    "create-block": "./tasks/cli.js"
  },
  "scripts": {
    "start": "webpack -w",
    "build": "webpack"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.scss": [
      "suppress-exit-code stylelint --fix",
      "git add"
    ],
    "*.js": [
      "suppress-exit-code eslint --fix",
      "git add"
    ],
    "*.php": [
      "suppress-exit-code ./vendor/bin/phpcs",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/plugin-transform-react-jsx": "^7.8.3",
    "@babel/preset-env": "^7.8.6",
    "@wordpress/babel-plugin-makepot": "^2.1.3",
    "autoprefixer": "^9.7.4",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-inline-replace-variables": "^1.3.1",
    "chalk": "^2.4.2",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.4.2",
    "eslint": "^5.16.0",
    "eslint-config-wordpress": "^2.0.0",
    "eslint-plugin-react": "^7.18.3",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "husky": "^1.3.1",
    "lint-staged": "^10.0.8",
    "node-sass": "^4.13.1",
    "sass-loader": "^8.0.2",
    "stylelint": "^9.10.1",
    "suppress-exit-code": "^0.1.0",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "word-count": "^0.2.2"
  }
}
